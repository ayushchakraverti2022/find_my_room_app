<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frontend.RegistorActivity">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/loginscreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10mdp"
        android:background="#1AFFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:boxCornerRadiusBottomEnd="@dimen/_5mdp"
            app:boxCornerRadiusBottomStart="@dimen/_5mdp"
            app:boxCornerRadiusTopEnd="@dimen/_5mdp"
            app:boxCornerRadiusTopStart="@dimen/_5mdp"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registerusremail"
                android:layout_width="match_parent"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_15mdp"
                android:layout_height="wrap_content"
                android:hint="Enter your email" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:boxCornerRadiusBottomEnd="@dimen/_5mdp"
            app:boxCornerRadiusBottomStart="@dimen/_5mdp"
            app:boxCornerRadiusTopEnd="@dimen/_5mdp"
            app:boxCornerRadiusTopStart="@dimen/_5mdp"
            android:layout_marginTop="@dimen/_10mdp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registorpsswrd"
                android:layout_width="match_parent"
                android:textSize="@dimen/_15mdp"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:hint="Enter your password" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/pgregistorbutton"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15mdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbutton"
            android:text="Registor as PG"
            />


        <Button
            android:id="@+id/renterregisterbutton"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15mdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbutton"
            android:text="Registor as Renter"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>