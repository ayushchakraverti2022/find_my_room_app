<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_3mdp"
        android:padding="@dimen/_3mdp"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_1mdp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_3mdp"

        android:orientation="horizontal"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="7"
        android:gravity="center"
        android:layout_height="@dimen/_200mdp">


        <com.appbroker.roundedimageview.RoundedImageView
            android:id="@+id/roundedImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1mdp"
            android:src="@drawable/loginscreen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:radius="@dimen/_5mdp" />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="left"
            android:layout_weight="5"
            android:gravity="left"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/roundedImageView"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_3mdp"
                android:layout_marginLeft="@dimen/_3mdp"
                android:layout_marginTop="@dimen/_5mdp"
                android:drawableLeft="@drawable/place_24"
                android:text="INDrherfddfrgergertgerrtgfdyjtyewrtewrtgregtewtgewrtregewgerrgergewrgrgewgergewrgewrgwefghdfert"
                android:textSize="@dimen/_16mdp" />


            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_3mdp"
                android:layout_marginLeft="@dimen/_3mdp"
                android:layout_marginTop="@dimen/_5mdp"
                android:drawableLeft="@drawable/rupee_24"
                android:text="540"
                android:textSize="@dimen/_16mdp" />
            <TextView
                android:id="@+id/provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_3mdp"
                android:layout_marginLeft="@dimen/_3mdp"
                android:layout_marginTop="@dimen/_5mdp"
                android:drawableLeft="@drawable/person_24"
                android:text="Renter"
                android:textSize="@dimen/_13mdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5mdp"
                    android:drawableLeft="@drawable/unlike_star_outline_24"
                    android:gravity="bottom"
                    android:text="Like"
                    android:textSize="@dimen/_15mdp" />
                <Button
                    android:id="@+id/contactcall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_3mdp"
                    android:layout_marginLeft="@dimen/_8mdp"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginBottom="@dimen/_5mdp"
                    android:background="@drawable/callbutton"
                    android:drawableLeft="@drawable/call_24"
                    android:text="9876543210"
                    android:textSize="@dimen/_14mdp" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>